extends ./layout/index.pug
block compartircontenido 
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}
        .row 
            .col-md-12 
                h2.d.block.w-100.text-center Agregar Habitacion   
                if (errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center = error.mensaje 

            .row.justify-content-center.col 
                .col-md-8 
                    form(action="/habitaciones" method="POST")
                        .form-group 
                            label(for="id_hbt") Id 
                            input#id_hbt(type="text",placeholder="Identificador",name="id_hbt",class="form-control",value=id_hbt, readonly="readonly")
                        .form-group 
                            label(for="piso") Piso  
                            input#piso(type="text",placeholder="Numero piso",name="piso",class="form-control",value=piso)
                        .form-group 
                            label(for="nombre") Nombre  
                            input#nombre(type="text",placeholder="Tu Nombre",name="nombre",class="form-control",value=nombre)
                        .form-group 
                            label(for="refrigerador") Refrigerador
                            br 
                            <select name="refrigerador">
                                <option value=true>si</option>
                                <option value=false>no</option>
                            </select>
                            <!--input#refrigerador(type="text",placeholder="Hay refrigerador [true/false]?",name="refrigerador",class="form-control",value=refrigerador)-->
                        .form-group 
                            label(for="id_htl") Hotel 
                            input#id_htl(type="text",placeholder="Hotel",name="id_htl",class="form-control",value=id_htl)
                        
                        input.btn.btn-success.btn-block(type="submit")