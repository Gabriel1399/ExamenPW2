extends ./layout/index.pug
block compartircontenido 
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}
        .row 
            .col-md-12 
                h2.d.block.w-100.text-center Agregar Gerente  
                if (errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center = error.mensaje 

            .row.justify-content-center.col 
                .col-md-8 
                    form(action="/gerentes" method="POST")
                        .form-group 
                            label(for="id_grt") Id
                            input#id_grt(type="text",placeholder="Identificador",name="id_grt",class="form-control",value=id_grt, readonly="readonly")
                        .form-group 
                            label(for="nombre") Nombre  
                            input#nombre(type="text",placeholder="Tu Nombre",name="nombre",class="form-control",value=nombre)
                        .form-group 
                            label(for="ap_paterno") Apellido Paterno 
                            input#ap_paterno(type="text",placeholder="Tu Apellido Paterno",name="ap_paterno",class="form-control",value=ap_paterno)
                        .form-group 
                            label(for="ap_materno") Apellido Materno
                            input#ap_marterno(type="text",placeholder="Tu Apellido Materno",name="ap_materno",class="form-control",value=ap_materno)
                        .form-group 
                            label(for="telefono") Telefono  
                            input#telefono(type="text",placeholder="Tu Telefono",name="telefono",class="form-control",value=telefono)
                        
                        input.btn.btn-success.btn-block(type="submit")